<h2>Turn <%= @round %></h2>

<div class="row paper">
  <% @news.each do |name, news_group| %> 
  <div class="col-xs-4 <%= name %>">
    <center style="align:center; margin-bottom:10px"><%= image_tag("#{name}.png", width: '95%') %></center>
    <ul>
    <% news_group.each do |article|%>
    <li>
     <div>
      <p class="<%= name %>" style:"margin-bottom: 5px">
      <%= article.content %>
      </p>
      <% if !article.media_url.nil? && article.visible_image %>
        <% if article.media_url.length > 0 %>
          <%= image_tag article.media_url, width:'75%'%>
        <% end %>
      <% end %>
    </div>
    </li>
    <% end %>
    </ul>
  </div>
  <% end %>
</div>