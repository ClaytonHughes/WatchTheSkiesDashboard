<div id="admin">
  <h3>Generated Newspapers</h3>
  <section>
    <% @papers.each do |paper| %>
      <%= link_to "#{paper}", paper_path(paper), :class => "button-input" %>
    <% end %>
  </section>
  <section>
    <table class="unpr">
      <thead>
        <tr>
          <th>Round</th>
          <th>Title</th>
          <th>Content</th>
          <th>Media</th>
          <th>Paper Publicity</th>
        </tr>
      </thead>
      <tbody>
        <% @news_messages.each do |news_message| %>
          <tr>
            <td><%= news_message.round %></td>
            <td><%= news_message.title %></td>
            <td><%= news_message.content %></td>
            <td>
              <% if !news_message.media_url.nil? %>
                <% if news_message.media_url.length > 0 %>
                  <%= image_tag news_message.media_url, size: '150' %>
                <% end %>
              <% end %>
            </td>
            <td>
              <table>
                <tr>
                  <td>Content:
                  </td>
                  <td>
                    <%= link_to public_toggle_paper_content_path(news_message), method: :patch, :class => "button-input" do %>
                      <%= "#{news_message.visible_content}" %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>Media:</td>
                  <td>
                    <%= link_to public_toggle_paper_media_path(news_message), method: :patch, :class => "button-input" do %>
                      <%= "#{news_message.visible_image}" %>
                    <% end %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
